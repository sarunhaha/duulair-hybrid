{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": { "maxDuration": 10 }
    }
  ],
  "routes": [
    {
      "src": "/liff/registration/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/registration" }
    },
    {
      "src": "/liff/group-registration/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/registration/group" }
    },
    {
      "src": "/liff/success/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/registration/success" }
    },
    {
      "src": "/liff/dashboard/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/dashboard" }
    },
    {
      "src": "/liff/group-dashboard/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/dashboard/group" }
    },
    {
      "src": "/liff/(patient-profile|my-profile)/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/profile" }
    },
    {
      "src": "/liff/edit-profile/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/profile/edit" }
    },
    {
      "src": "/liff/settings/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/settings" }
    },
    {
      "src": "/liff/medications/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/settings/medications" }
    },
    {
      "src": "/liff/reminders/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/settings/reminders" }
    },
    {
      "src": "/liff/(health-log|log-medication|log-symptom|vitals-tracking|water-tracking|log-exercise|log-mood|log-medical-notes)/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/records" }
    },
    {
      "src": "/liff/reports/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/reports" }
    },
    {
      "src": "/liff/(records|trends|history|link)(/?.*)",
      "status": 302,
      "headers": { "Location": "/liff-v2/$1$2" }
    },
    {
      "src": "/liff/?$",
      "status": 302,
      "headers": { "Location": "/liff-v2/" }
    },
    {
      "src": "/liff/(.*)",
      "dest": "public/liff/$1"
    },

    {
      "src": "/liff-v2/assets/(.*)",
      "dest": "public/liff-v2/assets/$1"
    },
    {
      "src": "/liff-v2/fonts/(.*)",
      "dest": "public/liff-v2/fonts/$1"
    },
    {
      "src": "/liff-v2/(.*\\.(html|css|js|png|jpg|jpeg|gif|svg|ico|json|ttf|woff|woff2))",
      "dest": "public/liff-v2/$1"
    },
    {
      "src": "/liff-v2/?$",
      "dest": "public/liff-v2/index.html",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    },
    {
      "src": "/liff-v2/(.*)",
      "dest": "public/liff-v2/index.html",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    },
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ]
}
